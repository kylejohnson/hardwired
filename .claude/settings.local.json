{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebFetch(domain:datatracker.ietf.org)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(docker compose:*)",
      "Bash(docker network prune:*)",
      "Bash(curl:*)",
      "Bash(docker logs:*)",
      "Bash(docker inspect:*)",
      "WebFetch(domain:www.gnu.org)",
      "Bash(uv:*)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "env": {
    "UV_CACHE_DIR": "./.uv_cache"
  }
}
