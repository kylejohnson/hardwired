{
  "env": {
    "UV_CACHE_DIR": "./.uv_cache"
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebFetch(domain:datatracker.ietf.org)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(docker compose:*)",
      "Bash(docker network prune:*)",
      "Bash(curl:*)",
      "Bash(docker logs:*)",
      "Bash(docker inspect:*)",
      "WebFetch(domain:www.gnu.org)",
      "Bash(uv:*)",
      "WebFetch(domain:doc.powerdns.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:files.pythonhosted.org)",
      "Skill(test-unit)",
      "Skill(test-integration)",
      "Bash(tree:*)"
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  }
}
